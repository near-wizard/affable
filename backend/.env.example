# Environment
ENV=development

# Database
POSTGRES_DB=affiliate_platform
POSTGRES_USER=affiliate_user
POSTGRES_PASSWORD=change_me_in_production
DATABASE_URL=postgresql://affiliate_user:change_me_in_production@postgres:5432/affiliate_platform

# Redis
REDIS_PASSWORD=change_me_in_production
REDIS_URL=redis://:change_me_in_production@redis:6379/0

# Security - IMPORTANT: Generate strong random keys for production
# Use: openssl rand -hex 32
SECRET_KEY=change_me_to_random_64_character_hex_string_minimum_32_chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# OAuth - Google
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# OAuth - LinkedIn
# Get from: https://www.linkedin.com/developers/apps
LINKEDIN_CLIENT_ID=your_linkedin_client_id_here
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret_here

# OAuth - GitHub
# Get from: https://github.com/settings/developers
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here

# URLs
FRONTEND_URL=http://localhost:3000
API_URL=http://localhost:8000
TRACKING_DOMAIN=localhost:8000

# Monitoring (optional)
SENTRY_DSN=

# Email (optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@yourplatform.com